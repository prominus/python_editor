{
	"compilerOptions": {
		"declaration": true,
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"outDir": "./dist",
		"lib": ["dom", "es6", "es2015.collection", "es2015.promise"],
		"types": ["node"],
		"baseUrl": "./node_modules",
		"jsx": "preserve",
		"rootDir": "./src",
		"typeRoots": ["node_modules/@types"],
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": ["./node_modules"]
}
